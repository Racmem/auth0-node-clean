{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["simple-import-sort"],
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "indent": [
            "error", 2,
            {"SwitchCase": 1}
        ],
        "quotes": [
            "error",
            "single"
        ],
        "object-curly-spacing": [1],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "no-console": "off",
        "simple-import-sort/imports": "error"
    }
}
